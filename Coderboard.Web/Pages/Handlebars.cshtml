@page
@model Coderboard.Web.Pages.HandlebarsModel
@{
    Layout = "Shared/_Layout.cshtml";
}

    @{
        var person = new { name = "Ahmed", age = 30 };
    }

    <handlebars-template id="person" model="@person">
        <div class="person">
            <h2>{{name}}</h2>
            <p>{{age}} years old</p>
        </div>
    </handlebars-template>

    <button type="button" id="updatePerson">Update Person</button>

@section Scripts{
    <script>
        const template = Handlebars.compile(document.getElementById("person-template").innerHTML);

        function renderPerson(name, age) {
            const html = template({ name, age });
            document.getElementById("person-container").innerHTML = html;
        }

        document.getElementById("updatePerson").addEventListener("click", () => {
            renderPerson("Fatima", 28);
        });
    </script>
}