@page
@using Microsoft.Extensions.Localization
@model Coderboard.Web.Pages.LoginModel
@using LoginModelLocalization = Coderboard.Web.Resources.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="w-full max-w-sm mx-auto bg-white p-8 rounded-2xl shadow-md mt-24">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">
        @LoginModelLocalization.WelcomeBack
    </h2>
    <form id="loginForm" class="space-y-4">
        @Html.AntiForgeryToken()
        <div>
            <label class="block text-gray-700 mb-1" asp-for="Input.Email">Email</label>
            <input type="email" asp-for="Input.Email"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
            <label class="block text-gray-700 mb-1" asp-for="Input.Password">Password</label>
            <div class="relative">
                <input type="password" asp-for="Input.Password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg pr-10 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <button type="button" id="togglePassword"
                        class="absolute inset-y-0 right-2 text-gray-500 text-sm">
                    Show
                </button>
            </div>
        </div>
        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
            Login
        </button>
    </form>
    <p class="mt-4 text-sm text-center text-gray-500">
        Don't have an account? <a href="#" class="text-blue-600 hover:underline">Sign up</a>
    </p>
</div>