@page
@using Microsoft.Extensions.Localization
@model Coderboard.Web.Pages.LoginModel
@using LoginModelLocalization = Coderboard.Web.Resources.Pages.LoginModel

<!DOCTYPE html>

<html lang="@System.Globalization.CultureInfo.CurrentCulture.Name"
      dir="@(System.Globalization.CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")"
      class="h-full">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/tailwind-output.css" asp-append-version="true" rel="stylesheet">
    <script src="~/js/site.js" asp-append-version="true" defer></script>
</head>
<body class="h-full bg-gray-50 dark:bg-gray-900">
    <!-- Navbar -->
    <header class="backdrop-blur-md bg-white/80 dark:bg-gray-800/80 border-b border-gray-200 dark:border-gray-700 fixed top-0 left-0 right-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
            <!-- Brand -->
            <div class="text-2xl font-bold text-gray-900 dark:text-white">
                <a href="/" class="flex items-center gap-2">
                    <!-- Add your logo here if needed -->
                    Coderboard
                </a>
            </div>

            <!-- Controls -->
            <div class="flex items-center gap-4">
                <!-- Language Toggle -->
                <div class="bg-gray-100 dark:bg-gray-700 rounded-lg p-1 flex items-center space-x-1 text-sm">
                    <button id="lang-en" onclick="switchLanguage('en')"
                            class="px-3 py-1.5 rounded-md transition-colors text-gray-700 dark:text-gray-300 hover:bg-white dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        English
                    </button>
                    <button id="lang-ar" onclick="switchLanguage('ar')"
                            class="px-3 py-1.5 rounded-md transition-colors text-gray-700 dark:text-gray-300 hover:bg-white dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        العربية
                    </button>
                </div>

                <!-- Dark Mode Toggle -->
                <button id="themeToggle" onclick="toggleTheme()"
                        class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span class="sr-only">Toggle dark mode</span>
                    <!-- Sun icon (shown in dark mode) -->
                    <svg data-theme-icon="sun" class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
                    </svg>
                    <!-- Moon icon (shown in light mode) -->
                    <svg data-theme-icon="moon" class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
                    </svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md">
            <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-8">
                <h2 class="text-2xl font-bold mb-8 text-center text-gray-900 dark:text-white">
                    @LoginModelLocalization.WelcomeBack
                </h2>
                <form id="loginForm" class="space-y-6">
                    @Html.AntiForgeryToken()
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" asp-for="Email">
                        </label>
                        <input type="email" asp-for="Email"
                               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400" />
                        <span asp-validation-for="Email" class="text-sm text-red-600 dark:text-red-400 mt-1 block"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" asp-for="Password">
                        </label>
                        <div class="relative">
                            <input type="password" asp-for="Password"
                                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400" />
                            <button type="button" id="togglePassword"
                                    class="absolute inset-y-0 end-0 pe-3 flex items-center text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200">
                                <span class="text-sm">Show</span>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-sm text-red-600 dark:text-red-400 mt-1 block"></span>
                    </div>
                    <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2.5 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800">
                        Login
                    </button>
                </form>
                <p class="mt-6 text-sm text-center text-gray-600 dark:text-gray-400">
                    Don't have an account?
                    <a href="/signup" class="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">
                        Sign Up
                    </a>
                </p>
            </div>
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
