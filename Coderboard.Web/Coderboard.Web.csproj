<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>645f8613-8b51-4c7d-a1f8-b51913d7f07b</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="HttpClients\" />
    <Folder Include="Pages\UI\" />
    <Folder Include="Pages\Shared\" />
    <Folder Include="wwwroot\ui\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Handlebars.Net" Version="2.1.6" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.9.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\DataAnnotations.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>DataAnnotations.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Pages\LoginModel.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>LoginModel.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\DataAnnotations.resx">
      <Generator>publicResXFileCodeGenerator</Generator>
      <LastGenOutput>DataAnnotations.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Pages\LoginModel.resx">
      <Generator>publicResXFileCodeGenerator</Generator>
      <LastGenOutput>LoginModel.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="NSwagCodeGeneration" BeforeTargets="BeforeBuild">
    <Exec Command="dotnet nswag run nswag.json" StandardOutputImportance="high" />
  </Target>

</Project>
