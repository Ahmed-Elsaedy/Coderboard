{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": [ "ES2020", "DOM" ],
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": [
    "../Coderboard.Web/ClientApp/Shared/**/*.ts",
    "Areas/**/Pages/**/*.cshtml.ts",
    "Pages/**/*.cshtml.ts"
  ],
  "exclude": [
    "wwwroot",
    "node_modules"
  ]
}
