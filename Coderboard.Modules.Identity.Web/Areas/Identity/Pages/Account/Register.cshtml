@page
@using Htmx
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex items-center justify-center min-h-[calc(100vh-4rem)] bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 text-center">Create a new account</h2>
        <p class="text-gray-500 text-center mt-2">Fill in the details below to register</p>

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="mt-6 space-y-5">
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.Email"
                       class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="Input.Email" class="text-sm text-red-600 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.Password"
                       class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="Input.Password" class="text-sm text-red-600 mt-1 block"></span>
            </div>

            <!-- Confirm Password -->
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword"
                       class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-red-600 mt-1 block"></span>
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-white font-medium shadow hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Register
            </button>
        </form>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mt-4"></div>

        <!-- Link to login -->
        <p class="text-center text-sm text-gray-600 mt-6">
            Already have an account?
            <a asp-page="./Login" class="font-medium text-indigo-600 hover:text-indigo-500">Login here</a>
        </p>
    </div>
</div>
