@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-[80vh] flex items-center justify-center py-12">
    <div class="w-full max-w-md">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="bg-white/80 dark:bg-neutral-800/90 backdrop-blur shadow-xl rounded-2xl p-8 border border-neutral-200/60 dark:border-neutral-600/70 space-y-5">
            <div class="text-center">
                <h1 class="text-3xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100">@ViewData["Title"]</h1>
                <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">Create your account to get started.</p>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-red-600 dark:text-red-400 text-sm" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium mb-1 text-neutral-800 dark:text-neutral-200">Email</label>
                <input asp-for="Input.Email" class="block w-full rounded-xl border border-neutral-300 dark:border-neutral-500 bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-400 dark:placeholder-neutral-400 px-4 py-2.5 text-sm focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:border-blue-600" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 dark:text-red-400 text-sm"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium mb-1 text-neutral-800 dark:text-neutral-200">Password</label>
                <input asp-for="Input.Password" class="block w-full rounded-xl border border-neutral-300 dark:border-neutral-500 bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-400 dark:placeholder-neutral-300 px-4 py-2.5 text-sm focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:border-blue-600" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-red-600 dark:text-red-400 text-sm"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium mb-1 text-neutral-800 dark:text-neutral-200">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="block w-full rounded-xl border border-neutral-300 dark:border-neutral-500 bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-400 dark:placeholder-neutral-300 px-4 py-2.5 text-sm focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:border-blue-600" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 dark:text-red-400 text-sm"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-full inline-flex justify-center items-center rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 px-4 py-2.5 text-white text-sm font-medium shadow hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-4 focus:ring-blue-500/30">Create account</button>
            <p class="text-center text-sm text-neutral-700 dark:text-neutral-300">Already have an account?
                <a class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>
            </p>
        </form>
    </div>
</div>

