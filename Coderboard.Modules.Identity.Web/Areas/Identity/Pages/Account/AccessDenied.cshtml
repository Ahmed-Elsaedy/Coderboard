@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="min-h-[50vh] flex items-center justify-center py-16 bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-neutral-900 dark:via-neutral-900 dark:to-neutral-900">
    <div class="w-full max-w-xl">
        <header>
            <div class="bg-white/90 dark:bg-neutral-800/90 backdrop-blur-xl shadow-2xl rounded-3xl p-8 border border-neutral-200/60 dark:border-neutral-600/70">
                <h1 class="text-3xl font-semibold text-red-600 dark:text-red-400 mb-2">@ViewData["Title"]</h1>
                <p class="text-neutral-700 dark:text-neutral-200">You do not have access to this resource.</p>
            </div>
        </header>
    </div>
</div>
